<TabControl x:Class="TimeTrackerUiWpf.Views.MainTabControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:views="clr-namespace:TimeTrackerUiWpf.Views"
    xmlns:vm="clr-namespace:TimeTrackerUiWpf.ViewModels"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    ItemsSource="{Binding TabViewModels}"
    SelectedItem="{Binding SelectedTabViewModel}">
    <TabControl.Resources>
        <DataTemplate DataType="{x:Type vm:NewTaskViewModel}">
            <views:TabNewTaskView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TaskListViewModel}">
            <views:TabTaskListView/>
        </DataTemplate>
    </TabControl.Resources>

    <TabControl.ItemContainerStyle>
        <Style TargetType="TabItem">
            <Setter Property="Header" Value="{Binding Header}" />
        </Style>
    </TabControl.ItemContainerStyle>
</TabControl>
